<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:font='@{"SF-UI-Display-Semibold.ttf"}'
            android:textSize="18.4sp"
            android:textColor="@color/gv_details_item_header" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:font='@{"SF-UI-Display-Regular.ttf"}'
            android:textSize="18.4sp"
            android:textColor="@color/gv_details_item_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            tools:mockup_opacity="0.5"
            android:background="@color/gv_details_item_separator" />

    </LinearLayout>

</layout>